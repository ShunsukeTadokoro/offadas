# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

GET         /hoge/:userId        controllers.UserController.show(userId: Int)
POST        /hoge/create         controllers.UserController.create
GET         /fuga/:userId        controllers.OfferController.list(userId: Int)
GET         /piyo/:userId        controllers.OfferController.list2(userId: Int)